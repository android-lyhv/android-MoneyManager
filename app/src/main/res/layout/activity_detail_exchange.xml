<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tvTabIncome"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorBackgroundLine"
                    android:gravity="center"
                    android:text="Thu Nhập"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvTabExpense"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Chi Tiêu"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvTabTransfer"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorBackgroundLine"
                    android:gravity="center"
                    android:text="Chuyển Tiền"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <RelativeLayout
                    android:id="@+id/rlCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_selected"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tvTitleSpinnerCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Thể loại" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvCategoryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleSpinnerCurrency"
                        android:layout_below="@+id/tvTitleSpinnerCurrency"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:text="An uong"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvCategoryName"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"
                    android:clickable="true"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Giá trị" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleMoney"
                        android:layout_below="@+id/tvTitleMoney"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:text="-100.000"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="17dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvAmount"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"

                    android:clickable="true"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Chú thích" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleDescription"
                        android:layout_below="@+id/tvTitleDescription"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="abc"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvDescription"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"

                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tiền tệ" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvCurrency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleCurrency"
                        android:layout_below="@+id/tvTitleCurrency"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:text="VND"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvCurrency"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"

                    android:clickable="true"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tài khoản" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleWallet"
                        android:layout_below="@+id/tvTitleWallet"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Cash"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvAccount"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"

                    android:clickable="true"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ngày" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleDate"
                        android:layout_below="@+id/tvTitleDate"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        tools:text="17/02/2013" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvDate"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"

                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Giờ" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleTime"
                        android:layout_below="@+id/tvTitleTime"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        tools:text="15:24" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvTime"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"

                    android:clickable="true"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitleTypeExchange"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Loại thanh toán" />

                    <ImageView
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/tvTypeExchange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tvTitleTypeExchange"
                        android:layout_below="@+id/tvTitleTypeExchange"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:text="tiền mặt"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvTypeExchange"
                        android:layout_marginTop="5dp"
                        android:background="#c4c4c4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_selected"
                    android:clickable="true"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvTitlePosition"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Vị trí" />


                    <ImageView
                        android:id="@+id/imgLocaiton"
                        android:layout_width="@dimen/activity_detail_exchange.image.with"
                        android:layout_height="@dimen/activity_detail_exchange.image.height"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/tvTitlePosition"
                        android:src="@drawable/ic_maker" />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/imgLocaiton"
                        android:layout_marginTop="10dp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>