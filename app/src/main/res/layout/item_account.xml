<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_white"
    android:clickable="true">

    <ImageView
        android:id="@+id/imgColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_color_account" />

    <TextView
        android:id="@+id/tvNameAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgColor"
        android:layout_alignTop="@id/imgColor"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/imgColor"
        android:gravity="center_vertical"
        android:text="Halo"
        android:textColor="#1f1f1f"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgColor"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/imgColor"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:src="@drawable/ic_view_headline" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/imgColor"
        android:layout_marginTop="20dp"
        android:background="@color/colorBackgroundLine" />
</RelativeLayout>
