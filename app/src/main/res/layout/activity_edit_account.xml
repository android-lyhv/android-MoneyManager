<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitleAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tên tài khoản" />


                <EditText
                    android:id="@+id/tvAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tvTitleAccountName"
                    android:layout_below="@+id/tvTitleAccountName"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="CRASH"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBackgroundLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitleInitAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Giá trị ban đầu" />


                <TextView
                    android:id="@+id/tvInitAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tvTitleInitAmount"
                    android:layout_below="@+id/tvTitleInitAmount"
                    android:background="@android:color/transparent"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    tools:text="1.000" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBackgroundLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitleCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mô tả" />


                <TextView
                    android:id="@+id/tvCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tvTitleCategory"
                    android:layout_below="@+id/tvTitleCategory"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:paddingTop="10dp"
                    tools:text="Tài khoản từ exambank" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBackgroundLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitleColor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chọn màu" />

                <ImageView
                    android:id="@+id/imgColor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@id/tvTitleColor"
                    android:layout_below="@+id/tvTitleColor"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_color_account"
                    android:clickable="true"
                    android:textSize="20dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBackgroundLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitleLocaion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="Lưu vị trí" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>