<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/tvAmount"
        tools:text="1000000.00"
        android:textSize="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBackgroundLine" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="*"
        android:stretchColumns="*">

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tvCal7"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:id="@+id/tvCal8"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="8" />

            <TextView
                android:id="@+id/tvCal9"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="9" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tvCal4"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:id="@+id/tvCal5"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/tvCal6"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="6" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tvCal1"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1" />

            <TextView

                android:id="@+id/tvCal2"
                style="@style/calculator_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvCal3"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="3" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tvCalDot"
                style="@style/calculator_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="." />

            <TextView
                android:id="@+id/tvCal0"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="0" />

            <ImageView
                android:id="@+id/imgCalBack"
                style="@style/calculator_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_backspace" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tvCalClean"
            style="@style/calculator_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="C" />

        <TextView
            android:id="@+id/tvOk"
            style="@style/calculator_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="=" />
    </LinearLayout>

</LinearLayout>